<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.settings.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:src="@drawable/user"
                android:layout_marginTop="20dp"
                android:id="@+id/iv_profile_image_settings"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <Button
                android:textColor="@color/blue"
                android:text="Entrar com conta TMDB"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginTop="16dp"
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_profile_image_settings" />

        <View
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/btn_login"
                android:background="@color/white"
                android:id="@+id/view_separator_1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        <TextView
                android:textSize="18sp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:id="@+id/tv_autoplay"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:text="Reproduzir vídeos automaticamente"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/sw_autoplay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_separator_1" />

        <androidx.appcompat.widget.SwitchCompat
                app:trackTint="@color/gray700"
                android:layout_marginEnd="16dp"
                android:id="@+id/sw_autoplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tv_autoplay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_autoplay" />

        <View
                app:layout_constraintTop_toBottomOf="@id/tv_autoplay"
                android:background="@color/white"
                android:id="@+id/view_separator_2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        <TextView
                android:textSize="18sp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:id="@+id/tv_audio"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:text="Vídeos com áudio por padrão"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/sw_audio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_separator_2" />

        <androidx.appcompat.widget.SwitchCompat
                app:trackTint="@color/gray700"
                android:layout_marginEnd="16dp"
                android:id="@+id/sw_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tv_audio"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_audio" />

        <View
                app:layout_constraintTop_toBottomOf="@id/tv_audio"
                android:background="@color/white"
                android:id="@+id/view_separator_3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        <TextView
                android:textSize="18sp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:id="@+id/tv_hq_image"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:text="Carregar imagens com alta qualidade"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/sw_hq_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_separator_3" />

        <androidx.appcompat.widget.SwitchCompat
                app:trackTint="@color/gray700"
                android:layout_marginEnd="16dp"
                android:id="@+id/sw_hq_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tv_hq_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_hq_image" />

        <View
                app:layout_constraintTop_toBottomOf="@id/tv_hq_image"
                android:background="@color/white"
                android:id="@+id/view_separator_4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>